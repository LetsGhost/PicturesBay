{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["jest"],
    },
    "include": [
      "src/**/*.ts",
      "src/types/**/*.d.ts",
      "tests/**/*.ts"
    ]
  }